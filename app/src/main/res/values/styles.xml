<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">@color/redPrimary</item>
        <item name="colorPrimaryDark">@color/redPrimaryDark</item>
        <item name="colorAccent">@color/redAccent</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/bluePrimaryDark</item>
        <item name="colorAccent">@color/blueAccent</item>
    </style>

    <style name="AppTheme.Teal">
        <item name="colorPrimary">@color/tealPrimary</item>
        <item name="colorPrimaryDark">@color/tealPrimaryDark</item>
        <item name="colorAccent">@color/tealAccent</item>
    </style>

    <style name="AppTheme.Green">
        <item name="colorPrimary">@color/greenPrimary</item>
        <item name="colorPrimaryDark">@color/greenPrimaryDark</item>
        <item name="colorAccent">@color/greenAccent</item>
    </style>


    <style name="PadLayoutStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/padPaddingTop</item>
        <item name="android:paddingBottom">@dimen/padPaddingBottom</item>
        <item name="android:paddingLeft">@dimen/padPaddingHor</item>
        <item name="android:paddingRight">@dimen/padPaddingHor</item>
    </style>

    <style name="PadButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="PadButtonStyle.Num">
        <item name="android:textSize">@dimen/btTextSize</item>
    </style>

    <style name="CurrencyIconStyle">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">@dimen/iconSize</item>
    </style>

    <style name="ItemLayoutStyle">
        <item name="android:paddingLeft">@dimen/itemPaddingHor</item>
        <item name="android:paddingRight">@dimen/itemPaddingHor</item>
        <item name="android:paddingTop">@dimen/itemPaddingVertical</item>
        <item name="android:paddingBottom">@dimen/itemPaddingVertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CountryNameStyle">
        <item name="android:textSize">@dimen/countryNameSize</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CountryNameStyle.List">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MoneyTextStyle">
        <item name="android:textSize">@dimen/moneySize</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textColorHint">?android:attr/textColorSecondaryInverse</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="CountryIconStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/iconWidth</item>
        <item name="android:layout_height">@dimen/iconHeight</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TitleAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">serif</item>
    </style>

</resources>
