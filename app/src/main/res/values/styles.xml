<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme.Main">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CurrencyNameStyle">
        <item name="android:textSize">@dimen/currencyNameSize</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CurrencyNameStyle.List">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CurrencyIconStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/iconWidth</item>
        <item name="android:layout_height">@dimen/iconHeight</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TitleAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">serif</item>
    </style>

</resources>
